#AngelOne
int a=10;
		int b=0;
	    int	c=b/a;
	    
		try {
			System.out.println(c=a/b);// risky code
		}
		catch(ArithmeticException e) {
			
			System.out.println("Arithmetic exception handled");
		}
		catch(NullPointerException e) {
			System.out.println("------NullPointer Exception HANDLED ------");
		}
		catch(ArrayIndexOutOfBoundsException e) {
			System.out.println("--Array IndexOutOf Bounds Exception handled--");
		}
		catch(Exception e) { // This exception we can use for any type of exception
			System.out.println("Generic exception handled");
		}
		System.out.println("---This is last line---");
	}
